<h1>Listing items</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<%= form_for :item, :method => :get do |f| %>

  <%= text_field_tag :name %>
  <%= f.submit "Search" %>

<% end %>

<%= ransack_ui_search %>

<br />

<%= link_to 'New Item', new_item_path %>
